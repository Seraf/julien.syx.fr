        <hr/>

        <div id="social-logos">
          <a href="/#contact">
            <img src="/media/images/webicon-mail-m.png" alt="E-mail">
          </a>
          <a href="/blog/index.xml">
            <img src="/media/images/webicon-rss-m.png" alt="RSS feed">
          </a>
